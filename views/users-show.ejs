
  <%- include('partials/_header.ejs') %>
      <main class="form-container">
        <section class="user-profile-main">
          <h1 class="title-header">My Profile</h1>
          <section class="profile-details">
            <div class="profile-photo">
              <img src="<%= user.profile_picture %>" alt="profile image"/>
            </div>
            <div class="profile-info">
              <h2 class="profile-header">Username:</h2>
              <p class="profile-field">
                <%= user.handle %>
              </p>
              <h2 class="profile-header">
                Email:</h3>
                <p class="profile-field">
                  <%= user.email %>
                </p>
                <h2 class="profile-header">
                  First Name:</h3>
                  <p class="profile-field">
                    <%= user.first_name %>
                  </p>
                  <h2 class="profile-header">
                    Last Name:</h3>
                    <p class="profile-field">
                      <%= user.last_name %>
                    </p>
                    <h2 class="profile-header">
                      About Me:</h3>
                      <p class="profile-field">
                        <%= user.bio %>
                      </p>
            </div>
          </section>
          <div class="button-area">
            <a href="/users/<%= userId %>/edit"><button class="edit-profile-button">Edit Profile</button></a>
          </div>
        </section>
      </main>

